    <section class="py-16 darker dark:bg-gray-900">
      <div class="max-w-6xl mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 px-6">
        {service.gallery.map((img, i) => (
          <img
            src={img}
            alt={`Gallery image ${i + 1}`}
            class="rounded-xl shadow-md object-cover w-full h-64"
            loading="lazy"
          />
        ))}
      </div>
    </section>
  )}

  <!-- Optional Video -->
  {service.video && (
    <section class="py-16 bg-white dark:bg-black">
      <div class="max-w-5xl mx-auto px-6">
        <div class="h-[500px] rounded-xl overflow-hidden shadow-lg">
