    </Motion>
  </div>

  <AppleCardCarousel client:only="vue">
    {
      projects2.map((card, index) => (
        <AppleCarouselItem index={index}>
      <AppleCard card={card} index={index} layout>
            <Motion
              client:only="vue"
              :initial="{ opacity: 0, y: 30 }"
              :while-in-view="{ opacity: 1, y: 0 }"
              :transition="{ delay: 0.1 * index, duration: 0.5, ease: 'easeOut' }"
            >
              <div
                class="group relative mb-4 transform rounded-3xl bg-[#F5F5F7] p-8 md:p-14 transition duration-300 hover:-translate-y-2 hover:shadow-2xl dark:bg-neutral-800"
