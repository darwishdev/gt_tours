---
import { Motion } from "motion-v";

const blogPosts = [
  {
    title: "Top 7 Must-Visit Places in Egypt for First-Time Travelers",
    date: "June 28, 2025",
    logo: "",
    excerpt:
      "Planning your first trip to Egypt? From the Pyramids of Giza to Luxor’s ancient temples and the Red Sea beaches, here are the destinations you shouldn’t miss.",
    image: "/b1.jpg",
    category: "Travel Guide",
  },
  {
    title: "Cairo in 3 Days: The Perfect Short Itinerary",
    logo: "",
    date: "June 15, 2025",
    excerpt:
      "Make the most of your time in Cairo with this balanced 3-day itinerary covering history, culture, food, and local experiences.",
    image: "/b2.jpg",
    category: "Itinerary",
  },
  {
    title: "Red Sea Adventures: Diving, Snorkeling, and Island Trips",
    logo: "",
    date: "May 30, 2025",
    excerpt:
      "Discover the best Red Sea experiences in Hurghada, Sharm El-Sheikh, and Marsa Alam — perfect for sea lovers and adventure seekers.",
      image: "/b3.jpg",
    category: "Destinations",
  },
];
---

<section class="bg-white py-24 text-gray-900">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Header -->
    <Motion
      client:only="vue"
      initial={{ opacity: 0, y: 30 }}
      while-in-view={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.6, ease: 'easeOut' }}
      class="text-center mb-16"
    >
      <h2 class="text-4xl font-bold mb-4">From the Blog</h2>
      <p class="max-w-2xl mx-auto text-gray-600">
        Explore insights, case studies, and technology updates from the Gulf
        Elite team.
      </p>
    </Motion>

    <!-- Blog Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
      {
        blogPosts.map((post, index) => (
          <Motion
            client:only="vue"
            as="article"
            initial={{ opacity: 0, y: 20 }}
            while-in-view={{ opacity: 1, y: 0 }}
            transition={{ delay: 0.1 * index, duration: 0.5, ease: 'easeOut' }}
            class="group rounded-2xl overflow-hidden border border-gray-200 bg-white shadow-sm transition hover:shadow-lg"
          >
            <img
              src={post.image}
              alt={post.title}
              class="h-48 w-full object-cover transition-transform duration-500 group-hover:scale-105"
            />
            <div class="p-6 flex flex-col gap-3">
              <span class="text-xs font-medium text-green-600 uppercase">
                {post.category}
              </span>
              <h3 class="text-lg font-semibold text-gray-800 group-hover:text-green-700">
                {post.title}
              </h3>
              <p class="text-sm text-gray-600">{post.excerpt}</p>
              <p class="mt-2 text-xs text-gray-400">{post.date}</p>
          <a href="/blog/soil-stabilization" class="mt-auto text-sm font-medium text-blue-600 hover:underline">
                Read More →
              </a>
            </div>
          </Motion>
        ))
      }
    </div>
  </div>
</section>
